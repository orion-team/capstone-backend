{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Ultimate Recipe"
  },
  "paths": {
    "/favorite": {
      "get": {
        "summary": "List all favorited items",
        "operationId": "listFavorites",
        "tags": ["favorites"],
        "responses": {
          "200": {
            "description": "A paginated response of favorited items",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Favorites"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Add a favorited item",
        "operationId": "createFavorites",
        "tags": ["favorites"],
        "requestBody": {
            "description": "Add recipe to favorites",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FavoritedItem"
                }
              }
            }
        },
        "responses": {
          "200": {
            "description": "Newly favorited item",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FavoritedItem"
                }
              }
            }
          },
          "default": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "FavoritedItem": {
        "type": "object",
        "required": ["id", "url", "title", "imageURL"],
        "properties": {
          "id": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "imageURL": {
            "type": "string"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Favorites": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/FavoritedItem"
        }
      },
      "Error": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
